{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "array-bracket-spacing": "error",
    "comma-dangle": "warn",
    "import/default": "off",
    "init-declarations": "error",
    "spaced-comment": "warn",
    "space-in-parens": "error",
    "no-console": "off",
    "no-debugger": "warn",
    "no-unused-vars": "warn",
    "object-curly-newline": "error",
    "strict": ["error", "global"]
  }
}
